{
  "root": true,
  "extends": ["@rao-pics/eslint-config/base", "@rao-pics/eslint-config/react"],
  "overrides": [
    {
      "files": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*"],
      "parserOptions": {
        "project": "./tsconfig.node.json"
      }
    },
    {
      "files": ["src/renderer/src/**/*", "src/preload/*.d.ts"],
      "parserOptions": {
        "project": "./tsconfig.web.json"
      }
    }
  ]
}
