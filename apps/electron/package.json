{
  "name": "@rao-pics/electron",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://www.electronjs.org",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "type-check:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "type-check:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "type-check": "pnpm '/^type-check:.*/'",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "pnpm type-check && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "pnpm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^1.0.2"
  },
  "devDependencies": {
    "@rao-pics/eslint-config": "^0.2.0",
    "@electron/notarize": "^1.2.3",
    "@types/node": "^18.16.19",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@vitejs/plugin-react": "^4.0.3",
    "electron": "^24.6.2",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.25",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@rao-pics/eslint-config/base",
      "@rao-pics/eslint-config/react"
    ],
    "overrides": [
      {
        "files": [
          "electron.vite.config.*",
          "src/main/**/*",
          "src/preload/**/*"
        ],
        "parserOptions": {
          "project": "./tsconfig.node.json"
        }
      },
      {
        "files": [
          "src/renderer/src/**/*",
          "src/preload/*.d.ts"
        ],
        "parserOptions": {
          "project": "./tsconfig.web.json"
        }
      }
    ]
  }
}
