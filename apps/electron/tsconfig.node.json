{
  "extends": [
    "@electron-toolkit/tsconfig/tsconfig.node.json",
    "@rao-pics/tsconfig/base.json"
  ],
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/*",
    "tailwind.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },

  "exclude": ["node_modules"]
}
