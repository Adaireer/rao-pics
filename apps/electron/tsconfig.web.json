{
  "extends": [
    "@electron-toolkit/tsconfig/tsconfig.web.json",
    "@acme/tsconfig/base"
  ],
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
