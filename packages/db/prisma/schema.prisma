generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "darwin", "darwin-arm64", "windows"]
}

datasource db {
    provider = "sqlite"
    url      = "file:./db.sqlite?connection_limit=1"
}

model Image {
    id          String   @id @unique
    // 名字
    name        String
    // 文件大小
    size        Int
    // 创建时间
    createTime  DateTime
    // 修改时间
    lastTime    DateTime
    // 扩展名
    ext         String
    width       Int
    height      Int
    // 颜色 
    colors      Color[]
    // 视频时长
    duration    Float?
    // 缩略图
    noThumbnail Boolean?
    // 文件夹
    folders     Folder[]
    tags        Tag[]
    library     Library  @relation(fields: [libraryId], references: [id])
    libraryId   Int
}

model Color {
    name      String  @id @unique
    // rgb 255,255,255
    rgb       String
    hex       String
    images    Image[]
    library   Library @relation(fields: [libraryId], references: [id])
    libraryId Int
}

// 资源大小从 image 中获取
model Library {
    id           Int       @id @default(autoincrement())
    name         String
    dir          String    @unique
    // eagle | billfish | pixcall | finder | ...
    type         String
    // 本地总数
    fileCount    Int       @default(0)
    // 最后一次同步时间
    lastSyncTime DateTime?
    // 已同步的数量
    images       Image[]
    folders      Folder[]
    Tag          Tag[]
    Color        Color[]
}

model Tag {
    name      String  @id @unique
    images    Image[]
    library   Library @relation(fields: [libraryId], references: [id])
    libraryId Int
}

model Folder {
    id        String  @id @unique
    name      String
    images    Image[]
    library   Library @relation(fields: [libraryId], references: [id])
    libraryId Int
}

model Config {
    id         String @id @unique
    // 页面端口
    webPort    Int
    // 资源端口
    assetsPort Int
    ip         String
}
