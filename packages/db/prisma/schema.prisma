generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./db.sqlite"
}

model Image {
    id                String    @id @unique
    name              String
    size              Int
    btime             DateTime
    mtime             DateTime
    modificationTime  DateTime
    ext               String
    url               String
    annotation        String
    width             Int
    height            Int
    star              Int?
    /// JSON.stringify
    palettes          String?
    lastModified      DateTime?
    deletedTime       DateTime?
    isDeleted         Boolean?  @default(false)
    // <--- 视频 start --->
    resolutionWidth   Int?
    resolutionHeight  Int?
    duration          String?
    // <--- 视频 end --->
    processingPalette Boolean?
    noThumbnail       Boolean?
    folders           Folder[]
    /// JSON.stringify
    tags              String?
    /// eagle | billfish | pixcall | local
    lirarry           Library   @relation(fields: [libraryId], references: [id])
    libraryId         String
}

model Library {
    id           String    @id @default(uuid())
    name         String
    dir          String    @unique
    // 本地总数
    fileCount    Int       @default(0)
    // 最后一次同步时间
    lastSyncTime DateTime?
    // 已同步的数量
    Image        Image[]
}

model Folder {
    id               String  @id @unique
    name             String
    description      String
    pid              String?
    modificationTime BigInt
    iconColor        String?
    icon             String?
    password         String
    passwordTips     String
    images           Image[]
}

model TagsGroups {
    id    String  @id @unique
    name  String  @unique
    color String?
    /// JSON.stringify
    tags  String
}
