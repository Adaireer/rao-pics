generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "darwin", "darwin-arm64", "windows"]
}

datasource db {
    provider = "sqlite"
    url      = "file:./db.sqlite?connection_limit=1"
}

model Image {
    id          String   @id @unique @default(uuid())
    // 名字
    name        String
    // 文件大小
    size        Int
    // 创建时间
    createTime  DateTime
    // 修改时间
    lastTime    DateTime
    // 扩展名
    ext         String
    width       Int
    height      Int
    // 视频时长
    duration    Float?
    // 缩略图
    noThumbnail Boolean?
    // 文件夹
    folders     Folder[]
    // eagle/pixcall 等内置 image id 
    extendId    String?
    tags        Tag[]
    colors      Color[]
    library     Library  @relation(fields: [libraryId], references: [id])
    libraryId   Int
}

model Color {
    rgb   Int     @id @unique
    ratio Float
    Image Image[]
}

model Library {
    id           Int       @id @default(autoincrement())
    name         String
    dir          String    @unique
    // eagle | billfish | pixcall | finder | ...
    type         String
    // 本地总数 = images.length + failCount 
    fileCount    Int       @default(0)
    // 失败的文件数 = 不支持的扩展名 + 无法读取的文件 + 已经删除的文件（metadata.isDeleted=true）
    failCount    Int?      @default(0)
    // 最后一次同步时间
    lastSyncTime DateTime?
    // 已同步的数量
    images       Image[]
    folders      Folder[]
    Tag          Tag[]
}

model Tag {
    name      String  @id @unique
    images    Image[]
    library   Library @relation(fields: [libraryId], references: [id])
    libraryId Int
}

model Folder {
    // 没有特殊处理 name = id, eagle 就是特殊处理的
    id        String  @id @unique
    name      String  @unique
    images    Image[]
    library   Library @relation(fields: [libraryId], references: [id])
    libraryId Int
}

model Config {
    id         String @id @unique
    // 页面端口
    webPort    Int
    // 资源端口
    assetsPort Int
    ip         String
}
