generator client {
  provider = "prisma-client-js"
  // FIXME: pnpm not found .prisma/client
  // https://github.com/prisma/prisma/issues/6603
  // https://github.com/prisma/prisma/issues/9848
  // output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite?connection_limit=1"
}

model Config {
  name     String @id @unique
  language String
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}
